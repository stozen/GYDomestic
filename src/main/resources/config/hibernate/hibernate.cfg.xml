<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- 引入映射的用户类 -->
		<mapping class="com.gy.model.User"/>
		
		<!-- 处理映射游戏的类 -->
		<mapping class="com.gy.model.Game"/>
		
		<!-- 处理映射的订单类 -->
		<mapping class="com.gy.model.Order"/>
		
		<!-- 处理映射的用户账户类 -->
		<mapping class="com.gy.model.Account"/>
		
		<!-- 处理映射的用户账户类 -->
		<mapping class="com.gy.model.Goods"/>
		
		<!-- 处理映射的用户账户类 -->
		<mapping class="com.gy.model.Token"/>
		
		<!-- 处理映射的用户账户类 -->
		<mapping class="com.gy.model.OrderGoods"/>
		
		<!-- 处理映射的验证码账户类 -->
		<mapping class="com.gy.model.VerificationCode"/>
		
		<!-- 处理映射的Token类 -->
		<mapping class="com.gy.model.Token"/>
		
		<!-- 处理映射的支付记录类 -->
		<mapping class="com.gy.model.PayRecord"/>
		
		<!-- 处理映射的阿里支付的类 -->
		<mapping class="com.gy.model.AliPayConfig"/>
		
		<!-- 处理映射的微信支付的类 -->
		<mapping class="com.gy.model.WeixinPayConfig"/>
		
		<!-- 处理映射的微信支付的类 -->
		<mapping class="com.gy.model.DataCount"/>
		
		<!-- 处理映射其他的类，预留位置 -->
		
	</session-factory>
</hibernate-configuration>